#b Transposing Data
import pandas as pd

# Read the dataset
df = pd.read_csv('C:/Users/rutik/Desktop/pseudo_facebook.csv')
# Transpose the data
transposed_data = df.T

# Print the transposed data
print(transposed_data.head())
